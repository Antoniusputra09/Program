<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pp_user_chat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/boy1"/>

    <TextView
        android:id="@+id/username_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20dp"
        android:layout_toRightOf="@id/pp_user_chat"
        android:layout_toEndOf="@id/pp_user_chat"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textColor="#000"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="10dp"
        app:civ_border_color="#05df29"
        android:id="@+id/img_on"
        android:visibility="gone"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/username_chat"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/pp_user_chat"
        android:layout_toEndOf="@id/pp_user_chat"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="10dp"
        app:civ_border_color="#bfbfbf"
        android:id="@+id/img_off"
        android:visibility="gone"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/username_chat"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/pp_user_chat"
        android:layout_toEndOf="@id/pp_user_chat"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
       android:text="Offline"
        android:textSize="11sp"
        android:id="@+id/textstt"
        android:visibility="visible"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/username_chat"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/pp_user_chat"
        android:layout_toEndOf="@id/pp_user_chat"/>

</RelativeLayout>