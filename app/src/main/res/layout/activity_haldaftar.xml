<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".haldaftar"
    android:background="#FFF">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/layout2.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="236dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:src="@drawable/header" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout2.6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout2.1"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/daftarusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:hint="Username"
                android:textColorHint="#000000"
                android:textColor="#030303"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout2.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout2.6"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/daftaremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:hint="Email"
                android:textColorHint="#000000"
                android:textColor="#030303"
                android:inputType="textEmailAddress"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2.2"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/daftarpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:hint="Password"
                android:textColorHint="#030303"
                android:inputType="textPassword"
                android:textColor="#030303" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2.4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout2.3"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/ulangpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:hint="Ulangi Password"
                android:textColorHint="#030303"
                android:inputType="textPassword"
                android:textColor="#030303"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout2.4"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/tomboldaftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tombol"
                android:text="daftar"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
        </RelativeLayout>



    </ScrollView>


</RelativeLayout>