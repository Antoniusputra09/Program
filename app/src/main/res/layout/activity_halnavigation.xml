<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout"
    tools:context=".halnavigation"
    android:background="@drawable/background1">


        <LinearLayout
            android:id="@+id/layout3.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/home_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:attr/actionBarSize">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/tombolchat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/chat1"
                        android:layout_alignParentRight="true"/>


                </RelativeLayout>



            </android.support.v7.widget.Toolbar>


        </LinearLayout>



        <RelativeLayout
            android:id="@+id/layout3.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="59dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fotopp1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/boy1"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/nama1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Andi Surya"
                android:textColor="#000"
                android:textSize="23dp"
                android:fontFamily="sans-serif-medium"
                android:layout_below="@id/fotopp1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/kelas1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XI RPL A"
                android:textColor="#000"
                android:textSize="19dp"
                android:fontFamily="sans-serif-medium"
                android:layout_below="@id/nama1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardBackgroundColor="#f1f1f1"
                android:layout_below="@id/kelas1"
                android:layout_toLeftOf="@id/tengah"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/boy1"
                    android:layout_gravity="center"/>


            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/tengah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardBackgroundColor="#f1f1f1"
                android:layout_below="@id/kelas1"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                android:layout_toRightOf="@id/tengah"
                android:layout_marginLeft="25dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/scoring1"
                    android:layout_gravity="center"/>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card13"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardBackgroundColor="#f1f1f1"
                android:layout_below="@id/card1"
                android:layout_toLeftOf="@id/tengah"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/calendar1"
                    android:layout_gravity="center"/>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardBackgroundColor="#f1f1f1"
                android:layout_below="@id/card2"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                android:layout_toRightOf="@id/tengah"
                android:layout_marginLeft="25dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/moneybag1"
                    android:layout_gravity="center"/>


            </android.support.v7.widget.CardView>



        </RelativeLayout>




    <android.support.design.widget.NavigationView
        android:id="@+id/navigasi_drawerhome"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_navigasi"
        app:menu="@menu/menu_navdraw">

    </android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>