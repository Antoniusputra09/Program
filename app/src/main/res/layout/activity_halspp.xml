<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".halspp"
    android:background="@drawable/bacground2">

    <RelativeLayout
        android:id="@+id/layout7.1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#f637bfbd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="20dp"
            android:text="Pantau Pembayaran SPP"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_marginTop="5dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dpspp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/boy1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#666666"
            android:text="Andi Surya"
            android:layout_below="@id/dpspp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout7.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout7.1">

        <RelativeLayout
            android:id="@+id/layout7.2.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/cardspp1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/layout7.2.1"
            android:layout_marginRight="30dp">


                <TextView
                    android:id="@+id/ketbln1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#b60000"
                    android:fontFamily="sans-serif-medium"
                    android:text="Januari"
                    android:layout_gravity="center"/>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cardspp2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/layout7.2.1"
            android:layout_marginLeft="30dp">


            <TextView
                android:id="@+id/ketbln2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#1fec10"
                android:fontFamily="sans-serif-medium"
                android:text="Februari"
                android:layout_gravity="center"/>


        </android.support.v7.widget.CardView>


    </RelativeLayout>

</RelativeLayout>